toolchain=/usr/bin/arm-linux-gnueabihf-g++
target_host=arm-linux-gnueabihf
cc_compiler=gcc
cxx_compiler=g++

[settings]
os=Linux
arch=armv7
build_type=Release
compiler=gcc
compiler.version=10
compiler.libcxx=libstdc++11

[env]
CHOST=$target_host
AR=$target_host-ar
AS=$target_host-as
RANLIB=$target_host-ranlib
LD=$target_host-ld
CC=$target_host-$cc_compiler
CXX=$target_host-$cxx_compiler
STRIP=$target_host-strip
RC=$target_host-windres
